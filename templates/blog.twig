---
permalink: /index.html
---
{% set page_title = 'amad.github.io' %}
{% extends "master.twig" %}
{% block content %}
<form class="form-inline mt-4" action="https://duckduckgo.com" name="searchform">
    <div class="form-row align-items-center">
        <div class="col-auto">
            <input class="form-control" type="search" name="q" aria-label="Search via DuckDuckGo" placeholder="Search via DuckDuckGo">
            <input type="hidden" name="sites" value="amad.github.io">
            <input type="hidden" name="kp" value="-2">
            <input type="hidden" name="k1" value="-1">
        </div>
        <div class="col-auto">
            <input class="btn ml-1" type="submit" value="Search">
        </div>
    </div>
</form>
    {% for year, postsOfYear in posts %}
        <div class="row pt-4">
            <div class="col-2 col-md-1 pt-3">
                <h4 class="text-muted font-weight-bold">{{ year }}</h4>
            </div>
            <div class="col-10 col-md-8 col-lg-6">
                <ul class="posts list-unstyled">
                    {% for post in postsOfYear %}
                    <li class="pb-2 pt-3 ml-2 post-item">
                        <a href="{{ post.meta.permalink|raw }}">
                            <span class="d-inline">{{ post.meta.title }}</span>
                            <span class="post-time text-muted font-weight-light text-monospace text-right">{{ post.meta.date|date('d M') }}</span>
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    {% endfor %}
{% endblock %}
{% block footer %}{% endblock %}
